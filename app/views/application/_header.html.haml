- if @force_gnb_and_footer || !hide_gnb_and_footer?
  %section#site-header
    .ui.menu
      .ui.container
        = link_to '우주당', root_path, class: 'header item'

        = link_to Project.model_name.human, projects_path, class: 'item'
        = link_to Poll.model_name.human, polls_path, class: 'item'
        = link_to Survey.model_name.human, surveys_path, class: 'item'
        = link_to Archive.model_name.human, archives_path, class: 'item'
        = link_to Memorial.model_name.human, memorials_path, class: 'item'
        = link_to Event.model_name.human, events_path, class: 'item'
        = link_to Article.model_name.human, articles_path, class: 'item'

        .menu.right
          = link_to '새소식', weekly_path, class: 'item'
          - if user_signed_in?
            .ui.simple.dropdown.item
              = render 'users/thumbnail'
              = current_user.nickname
              %i.dropdown.icon
              .menu
                = link_to '프로필 수정', edit_user_registration_path, class: 'item'
                = link_to '로그아웃', sign_out_path, method: :delete, class: 'item'

          - else
            = link_to new_user_session_path, class: 'item' do
              로그인 &middot; 가입
