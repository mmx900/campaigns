%section#site-header
  %nav.navbar.navbar-default{ style: 'margin-bottom: 0' }
    .container-fluid
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to root_path, class: 'navbar-brand' do
          = image_tag 'favicons/favicon-32x32.png', style: 'display: inline; width: 22px'
          우주당
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          / %li= link_to '소개', '/about'
          %li= link_to Agenda.model_name.human, agendas_path
          %li= link_to Project.model_name.human, projects_path
          %li= link_to Event.model_name.human, events_path
          %li= link_to Petition.model_name.human, petitions_path
          %li= link_to Article.model_name.human, articles_path
          %li= link_to '커뮤니티', 'https://wouldyou.parti.xyz', target: '_blank'
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li.dropdown.dropdown-hover
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "javascript:;", :role => "button"}
                = render 'users/thumbnail'
                = current_user.nickname
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li.dropdown.dropdown-submenu
                  %a{:href => "javascript:;"} Submenu
                  %ul.dropdown-menu{:role => "menu"}
                    %li= link_to '프로필 수정', edit_user_registration_path
                    %li= link_to '로그아웃', sign_out_path, method: :delete

          - else
            %li
              = link_to new_user_session_path do
                로그인 &middot; 가입
