- unless hide_gnb_and_footer?
  %section#site-header
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target": "#site-header-collapsable", "data-toggle": "collapse", type: "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href: root_path }
            직접 민주주의 플랫폼, 우주당!

        #site-header-collapsable.collapse.navbar-collapse
          %ul.nav.navbar-nav
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  = render 'users/thumbnail'
                  = current_user.nickname
                  %span.caret
                %ul.dropdown-menu
                  %li
                    = link_to edit_user_registration_path do
                      프로필 수정
                  %li
                    = link_to sign_out_path, method: :delete do
                      로그아웃
            - else
              %li
                = link_to new_user_session_path do
                  %i.fa.fa-sign-in
                  로그인 &middot; 가입

            %li
              = link_to campaigns_path do
                %i.fa.fa-rocket
                = Campaign.model_name.human
            %li
              = link_to discussions_path do
                %i.fa.fa-comments
                = Discussion.model_name.human
            %li
              = link_to polls_path do
                %i.fa.fa-thumbs-up
                = Poll.model_name.human
            %li
              = link_to petitions_path do
                %i.fa.fa-check
                = Petition.model_name.human
            %li
              = link_to Archive.model_name.human, archives_path
            %li
              = link_to Memorial.model_name.human, memorials_path
            %li
              = link_to Event.model_name.human, events_path
            %li
              = link_to Article.model_name.human, articles_path
