%section#site-header.tablet.or.lower.responsive-hidden
  .ui.menu
    .ui.container
      = link_to root_path, class: 'header item' do
        = image_tag 'favicons/favicon-32x32.png', style: 'width: 16px; margin-right: 5px;'
        우주당

      = link_to Agenda.model_name.human, agendas_path, class: 'item'
      = link_to Project.model_name.human, projects_path, class: 'item'
      = link_to Petition.model_name.human, petitions_path, class: 'item'
      = link_to Survey.model_name.human, surveys_path, class: 'item'
      = link_to Poll.model_name.human, polls_path, class: 'item'
      = link_to Article.model_name.human, articles_path, class: 'item'
      = link_to '커뮤니티', 'https://wouldyou.parti.xyz', target: '_blank', class: 'item'

      .menu.right
        - if user_signed_in?
          .ui.simple.dropdown.item
            = render 'users/thumbnail'
            = current_user.nickname
            %i.dropdown.icon
            .menu
              = link_to '프로필 수정', edit_user_registration_path, class: 'item'
              = link_to '로그아웃', sign_out_path, method: :delete, class: 'item'

        - else
          = link_to new_user_session_path, class: 'item' do
            로그인 &middot; 가입

%section#site-header--mobile.mobile.tablet.only
  .ui.menu.segment.secondary.pointing
    .ui.container
      = link_to root_path, class: 'header item' do
        = image_tag 'favicons/favicon-32x32.png', style: 'width: 16px; margin-right: 5px;'
        우주당
      .menu.right
        %a.item.gov-action-sidbar
          %i.sidebar.icon

