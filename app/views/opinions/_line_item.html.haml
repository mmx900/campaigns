- speaker = opinion.speaker
.panel.panel-default
  .panel-body
    .media[opinion]
      .media-left
        = link_to speaker_path(speaker) do
          %img.media-object{:src => speaker.image.xs.url}
      .media-body
        .row
          .col-sm-8.col-xs-7
            %h3.media-heading
              = link_to speaker_path(speaker) do
                = speaker.name
                %small= speaker.organization

            %p.lead{ style: 'margin-bottom: 0;' }
              = link_to opinion.quote, opinion_path(opinion, theme_tag: local_assigns[:theme_tag])
            - if opinion.body.present?
              - if local_assigns[:show_full]
                != simple_format h(opinion.body)
              - else
                != smart_truncate_html (simple_format opinion.body), length: 130, ellipsis: "... <a href='#{opinion_path(opinion, theme_tag: local_assigns[:theme_tag])}'>상세보기</a>"
            - else
              %p.text-muted 상세한 #{Opinion.model_name.human}은 아직 없습니다.
          .col-sm-4.col-xs-5.text-right
            = render 'votes/panel', votable: opinion, show_voters: false
