.options-panel{ id: options_panel_dom_id(survey) }
  .header
    %h4
      - if survey.project
        %small.project
          = link_to survey.project.title, survey.project
          %br
      = link_to survey.title, survey
  - feedback = survey.fetch_feedback_of(current_user)
  .body
    %table
      - survey.options.each do |option|
        %tr
          - if !user_signed_in?
            %td.body
              = link_to new_user_session_path do
                .chart{ class: ('active' if option.selected?(current_user)) }
                  .chart__bar{ style: "width: #{survey.percentage(option)}%"}
                    %span.chart__label= option.body
          - else
            - if survey.open?
              %td.body
                = link_to feedbacks_path(option_id: option.id), remote: true, method: :post do
                  .chart{ class: ('active' if option.selected?(current_user)) }
                    .chart__bar{ style: "width: #{survey.percentage(option)}%"}
                      %span.chart__label= option.body
            - else
              %td.body
                .chart{ class: ('active' if option.selected?(current_user)) }
                  .chart__bar{ style: "width: #{survey.percentage(option)}%"}
                    %span.closed.chart__label= option.body

          %td.feedbacks-count
            - if option.feedbacks_count > 0
              #{option.feedbacks_count}명
  .footer
    - if survey.open?
      마감까지 #{survey_remain_time(survey)}
    - else
      마감
    - if survey.feedbacks_count > 0
      &middot;
      총투표 #{survey.feedbacks_count}명
