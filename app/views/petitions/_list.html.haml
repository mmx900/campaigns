.container
  %h3.sub-title
    - if @project.present?
      = local_assigns[:title_label] || @project.try(:component_title, 'petition')
    - else
      = Petition.model_name.human
    - if user_signed_in? and (@project.blank? or can?(:create_peition, @project))
      %small.pull-right
        = link_to "서명 만들기", new_petition_path(project_id: @project)


  - if petitions.any?
    .row.masonry-container
      = render petitions
