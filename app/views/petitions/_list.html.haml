.container-fluid
  %h3
    - if @project.present?
      = local_assigns[:title_label] || @project.try(:component_title, 'petition')
    - else
      = Petition.model_name.human
      .pull-right
        = link_to new_petition_url(subdomain: root_subdomain) do
          %small 개설하기

  - if petitions.any?
    .row.masonry-container
      = render petitions
