.container
  %h3
    - if @project.present?
      = local_assigns[:title_label] || @project.try(:component_title, 'petition')
    - else
      = Petition.model_name.human
    %small.pull-right
      = link_to "서명 시작하기", new_petition_path(project_id: @project), class: 'btn btn-primary'

  - if petitions.any?
    .row.masonry-container
      = render petitions
