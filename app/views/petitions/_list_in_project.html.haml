.container
  .page-header
    %h2
      - if @project.present?
        = local_assigns[:title_label] || @project.try(:component_title, 'petition')
      - else
        = Petition.model_name.human
      %small.pull-right
        = link_to "서명 시작하기", new_petition_path(project_id: @project), class: 'btn btn-primary'

  .media-list
    - if petitions.any?
      - petitions.each do |petition|
        .panel.panel-default
          .panel-body
            .media
              .media-body
                %h4.media-heading
                  = link_to petition do
                    = petition.title
                    - if petition.comments.count > 0
                      %small (#{petition.comments.count})
                .media-meta
                  = render 'users/line', user: petition.user
                  - if petition.project.present?
                    &middot;
                    %span.project
                      = link_to petition.project do
                        = petition.project.title
              .media-right
                = link_to petition do
                  .pull-right
                    .btn.btn-default
                      - if petition.has_goal?
                        #{petition.percentage}% 달성
                      - else
                        #{number_with_delimiter(petition.signs_count)}명 참여

