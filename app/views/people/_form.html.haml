= form_for @person do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :body
    ~ f.text_area :body, class: 'form-control redactor'

  .form-group
    = f.label :image
    = f.file_field :image, class: 'form-control'

  .form-group
    = f.submit '저장', class: 'btn btn-primary'
