= render 'speakers/header', speaker: @speaker

- if @speaker.opinions.any?
  %section.page-block
    .container
      .page-header
        %h2
          최근 의견
      - @speaker.opinions.recent.limit(2).each do |opinion|
        %section.m-b
          %h3= opinion.issue.title
          - if opinion.issue.body.present?
            .issue-body
              %p!= simple_format(h(opinion.issue.body))
          = render opinion

= render 'agendas/tabs', agendas: @agendas, speakers: Speaker.where(id: @speaker), speaker_positions: ['대선주자']