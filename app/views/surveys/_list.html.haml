%section#surveys.page-block
  .ui.container
    - if @project.present?
      %h3
        = local_assigns[:title_label] || @project.try(:component_title, 'survey')
        %small
          = link_to "시작하기", new_survey_path(project_id: @project)
    - else
      %h3= Survey.model_name.human

    .section
      - if surveys.any?
        .row.masonry-container
          = render surveys

      - else
        - if @project.present?
          .ui.icon.message
            %i.inbox.icon
            .content
              .header
                가장 먼저 설문을 시작해 보세요.
              %p
                = link_to "#{Survey.model_name.human} 시작하기", new_survey_path(project_id: @project)
