- agenda = @campaign.issue.agendas.last
%section.page-block
  .container
    %fieldset
      %legend 아젠다
    .row
      .col-lg-3.col-md-3.col-sm-4.col-xs-6
        .agenda-card.panel-floating.component-card[agenda]
          .card-image{ style: "height: 100px; background-image: url(#{agenda.image.md.url}); background-size: cover; background-position: center center;" }
          .card-content
            .header{ style: 'font-size: 1.2em' }
              = agenda.name

            .card-description
              %span
                찬반투표 (#{agenda.opinions.sum(:votes_count)})
              %span
                정책 (#{agenda.opinions.count})


    = form_for campaign_step_model, url: campaign_campaign_step_path(campaign_step_model, "#{@campaign.template}=#{step}"), as: :campaign do |f|

      %fieldset
        %legend 관련된 이슈를 선택해주세요.

        - agenda.issues.each do |issue|
          .form-group
            = f.radio_button :issue_id, issue.id
            = issue.title

      - if previous_step.present?
        / = link_to "previous", edit_campaign_campaign_step_path(campaign_step_model, "#{@campaign.template}=#{previous_step}")
        = link_to "이전으로", edit_campaign_campaign_step_path(campaign_step_model, "#{@campaign.template}=#{previous_step}"), class: 'btn btn-lg btn-warning btn-block'

      %div
        = f.submit (next_step.present? ? "다음으로" : "저장"), class: 'btn btn-lg btn-primary btn-block'

