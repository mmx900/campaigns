<% modal_dom_id = "agent-request-modal-#{SecureRandom.uuid}" %>
var partial_order_form = "<%= j(render 'campaigns/petition_new/order_form', modal_dom_id: modal_dom_id, agent: Agent.find(params[:agent_id])) %>"
$('body').append(partial_order_form)
$('#<%= modal_dom_id %>').on('hide.bs.modal', function(e) { $(this).remove() })
$('#<%= modal_dom_id %>').modal()
