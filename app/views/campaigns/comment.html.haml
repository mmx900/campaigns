  /     %nav.navbar.navbar-default.navbar-fixed-bottom{ style: 'min-height: auto; background: transparent; border: 0;'}
  /       %div{ style: 'margin: 10px; box-shadow: 0 0 24px rgba(0,0,0,.5)' }
  /         %button.btn.btn-danger.btn-lg.btn-block
  /           종료되었습니다
