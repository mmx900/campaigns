= render 'campaigns/order/section_cover'
= render 'campaigns/order/section_tab', menu: 'story'

%section.section-panel
  = render 'campaigns/order/section_right'

  %section.section-left
    %section.section-story
      .section-title.clearfix
        %span 캠페인 소식을 만나 보세요!
        - if can?(:create_story, @campaign)
          = link_to '작성', new_story_path(story: { storiable_id: @campaign.id, storiable_type: 'Campaign' }), class: 'btn btn-primary', style: 'float: right'
      .stories
        - @campaign.stories.recent.each do |story|
          .story
            .story-header
              .user-image-sm{ style: "background-image:url(#{asset_url(@campaign.user.image_url(:md))});" }
              .user-nickname= @campaign.user.nickname
              .date= date_f story.published_at
            = link_to story do
              .story-title= story.title
              .story-body
                = excerpt(story.body, length: 200)
            .story-footer
              = render 'likes/button', likable: story
              - if story.comment_enabled
                &nbsp;
                = link_to story, class: 'comments-count' do
                  %i.fa.fa-comment-o
                  댓글
                  = story.comments_count

= render 'campaigns/order_button_sticky', campaign: @campaign
