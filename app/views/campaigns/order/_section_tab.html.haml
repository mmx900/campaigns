%section.border-bottom.border-primary.p-2
  %ul.nav.nav-pills.justify-content-center
    %li.nav-item
      = link_to '내용', campaign_path, class: class_string("nav-link" => true, "active" => menu == 'content')
    - if @campaign.agents.any?
      %li.nav-item
        = link_to '촉구', orders_campaign_path, class: class_string("nav-link" => true, "active" => menu == 'order')
    - else
      %li.nav-item{ 'data-toggle' => 'tooltip',  'data-placement' => 'top', 'data-boundary' => 'viewport', 'title' => '촉구 대상을 등록하겠습니다. 잠시 기다려주세요' }
        = link_to '촉구', '#', class: "nav-link"
    - if @campaign.comments.any?
      %li.nav-item
        = link_to comments_campaign_path, class: class_string("nav-link" => true, "active" => menu == 'comment') do
          의견
          - if @campaign.comments.any?
            %small
              = number_with_limit(@campaign.comments.size, 1000)
    %li.nav-item
      = link_to '소식', stories_campaign_path, class: class_string("nav-link" => true, "active" => menu == 'story')
    - if can? :edit, @campaign
      %li.nav-item
        = link_to edit_campaign_path(@campaign), class: class_string("nav-link" => true, "active" => menu == 'content') do
          %i.fa.fa-gear
          관리
