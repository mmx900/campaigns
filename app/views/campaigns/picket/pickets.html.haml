- if params[:page].present? and params[:page].to_i > 1
  = render 'campaigns/picket/pickets', template: @campaign.template, pickets: @pickets
- else
  = render 'campaigns/picket/section_cover'

  = render 'campaigns/picket/section_tab', menu: 'picket'

  - if @campaign.template == 'map'
    = render 'campaigns/picket/section_map'

  - if @campaign.comments.tag_counts_on(:tags).any?
    %section.section-picket-tags.medium-fold
      .picket-tags
        - @campaign.comments.tag_counts_on(:tags).order("taggings_count desc, name").take(5).each do |tag|
          .picket-tag
            = tag.name
            .picket-tag-count
              = tag.taggings_count
        - tag_more = @campaign.comments.tag_counts_on(:tags).count - 5
        - if tag_more > 0
          .picket-tag
            + #{tag_more}

  %section.section-pickets
    - if @pickets.count == 0
      .waiting-pickets
        = image_tag('no-comment')
        %p.lead 등록된 팻말이 없습니다. 첫번 째로 팻말을 들어주세요.
        = link_to '팻말들기', picket_form_campaign_path(@campaign), class: 'btn btn-warning btn-large', remote: true

    - else
      .container-picket
        .campaign-pickets-info
          = link_to pickets_campaign_path(@campaign), class: 'packet-count-all' do
            전체 팻말(#{@campaign.comments.count})
          - if user_signed_in?
            = link_to pickets_campaign_path(@campaign, pickets_user_id: current_user), class: 'packet-count-user' do
              내 팻말(#{@campaign.comments.where(user: current_user).count})
        = render 'campaigns/picket/pickets', template: @campaign.template, pickets: @pickets

= render 'campaigns/picket/picket_button'
