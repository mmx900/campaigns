- campaign = @story.storiable
= render "campaigns/#{campaign.template}/section_cover"
= render "campaigns/#{campaign.template}/section_tab", menu: 'story'

%section
  .container
    .row
      .col-sm-4.order-sm-2
        %section.mt-5
          = render 'campaigns/petition/section_right'

      .col-sm-8.order-sm-1
        %section.my-5
          %h3.font-weight-bold 소식

          .stories
            .bg-light.p-3
              .mb-3.text-muted
                .d-flex.justify-content-between
                  %span
                    = campaign.user.nickname
                    = date_f @story.published_at
                  = render 'likes/button', likable: @story
              .my-3
                %h5= @story.title
                .story-body
                  = raw @story.body
