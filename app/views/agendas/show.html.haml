.agenda-container
  = render 'agendas/header', agenda: @agenda

%section#agenda-block.page-block
  .post-block__issues
    = render 'issues/list', agenda: @agenda
  .post-block__speakers
    = render 'speakers/list', agenda: @agenda
  .post-block__push
    %section#issues.page-block
      .container
        %h3 국회의원에게 #{Opinion.model_name.human}요청하기
        = form_tag new_email_agenda_path(@agenda), method: :get do
          = select_tag :assembly_id, options_for_select(assembly_members), class: 'js-choose-assembly-members'
          = submit_tag '작성', class: 'ui button'
%section#agenda-block.page-block
  .container
    .post-block__comments
      = render 'comments/list', commentable: @agenda
