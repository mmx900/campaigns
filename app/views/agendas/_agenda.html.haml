- url = agenda_path(agenda, speaker_id: local_assigns[:speaker].try(:id))
.col-md-3.col-sm-4.col-xs-12
  .card
    = link_to url do
      .card-image{ style: "height: 140px; background-image: url(#{agenda.image.md.url}); background-size: cover; background-position: center center;" }
    .card-content
      = link_to agenda.name, url, class: 'header', style: 'font-size: 1.2em'
    .card-extra.card-content
      %span
        이슈 #{agenda.issues.count}개
