%section.m-b
  .container
    .row
      .col-sm-8.col-sm-offset-2
        .page-header
          %h3
            로그인

        .panel.panel-default
          .panel-body
            = link_to user_facebook_omniauth_authorize_path(provider: :facebook), class: 'btn btn-join btn-join-facebook btn-block btn-lg' do
              %i.fa.fa-facebook.fa-fw
              페이스북으로 가입 혹은 로그인
            = link_to user_twitter_omniauth_authorize_path(provider: :twitter), class: 'btn btn-join btn-join-twitter btn-block btn-lg' do
              %i.fa.fa-twitter.fa-fw
              트위터로 가입 혹은 로그인


        .panel.panel-default
          .panel-body
            %p.email-login-box-title 또는 이메일로 로그인

            = form_for User.new, url: session_path(:user) do |f|
              = f.hidden_field :provider, value: 'email'
              .form-group
                = f.email_field :email, placeholder: '이메일을 입력하세요', class: 'form-control'
              .form-group
                = f.password_field :password, placeholder: '비밀번호를 입력하세요', autocomplete: "off", class: 'form-control'
              .form-group
                = f.submit '로그인', class: 'btn btn-primary btn-block', data: { disable_with: "로그인 중..." }

        .text-center
          .links
            .text-muted.text-left
              처음이세요?
              = link_to '이메일로 가입', new_user_registration_path
            .text-muted.text-left
              비밀번호가 기억나지 않으세요?
              = link_to '비밀번호 분실', new_password_path(resource_name)

