= form_for @timeline do |f|
  .form-group
    = f.label :image
    = f.file_field :image, class: 'form-control'

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :body
    = f.text_area :body, rows: 10, class: 'form-control'

  .form-group
    = f.label :banner_image
    = f.file_field :banner_image, class: 'form-control'

  .form-group
    = f.label :banner_url
    = f.text_field :banner_url, class: 'form-control'

  .form-group
    = f.label :timeline_initial_zoom
    = f.number_field :timeline_initial_zoom, class: 'form-control'

  .form-group
    = f.submit '저장', class: 'btn btn-primary'
