= form_for [:admin, @opinion], html: { class: 'ui form' } do |f|
  .field
    = f.label :issue_id
    = f.collection_select :issue_id, Issue.all, :id, :title, {}, { class: 'ui selection dropdown' }

  .field
    = f.label :speaker_id
    = f.collection_select :speaker_id, Speaker.all, :id, :details, {}, { class: 'js-select2' }

  .field
    = f.label :quote
    = f.text_area :quote

  - if @opinion.issue.blank? or @opinion.issue.has_stance?
    .field
      = f.label :stance
      = f.select :stance, Opinion.stance.options, { include_blank: true }, class: 'ui selection dropdown'

  .field
    = f.label :body
    ~ f.text_area :body

  = f.submit '저장', class: 'ui button'
