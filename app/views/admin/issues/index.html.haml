%section.page-block
  .ui.container
    %h3 이슈
    %table.ui.table
      %thead
        %tr
          %th 이슈명
          %th 의제
          %th 스피커
          %th
            = link_to '추가', new_admin_issue_path, class: 'ui right floated small primary button'
      %tbody
        - @issues.each do |issue|
          %tr
            %td
              %h3= issue.title
            %td
              = issue.agenda.name
            %td
              10개의 이슈
            %td.right.aligned
              = link_to '수정', edit_admin_issue_path(issue), class: 'ui small button'
              = link_to '삭제', admin_issue_path(issue), method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }, class: 'ui small button'
