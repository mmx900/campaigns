%section#wikis-in-project
  .container
    .page-header
      %h3
        = local_assigns[:title_label] || @project.try(:component_title, 'wiki')
        %small.pull-right
          = link_to "페이지 추가", new_wiki_path(project_id: @project), class: 'btn btn-default btn-sm'

    - if wikis.any?
      .panel.panel-default
        .list-group
          - wikis.each do |wiki|
            .list-group-item
              .media
                .media-body
                  %h4.media-heading
                    = link_to wiki do
                      = wiki.title
                      - if wiki.comments.count > 0
                        %small
                          (#{wiki.comments.count})
                  .media-meta
                    %span.nickname
                      최종 수정자
                      = render 'users/line', user: wiki.wiki_revisions.last.user
                .media-right
                  .pull-right
                    .btn.btn-default
                      #{wiki.wiki_revisions.count}차례 수정

    - else
      - if @project.present?
        .alert.alert-info
          %i.inbox.icon
          첫 위키 페이지를 작성해 보세요.
          = link_to "#{Wiki.model_name.human} 추가하기", new_wiki_path(project_id: @project), class: 'alert-link'