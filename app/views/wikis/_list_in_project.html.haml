%section#wikis-in-project.page-block
  .container
    %h3
      = local_assigns[:title_label] || @project.try(:component_title, 'wiki')
      %small.pull-right
        = link_to "페이지 추가", new_wiki_path(project_id: @project), class: 'btn btn-default btn-sm'
    - if wikis.any?
      .ui.divided.items
        - wikis.each do |wiki|
          .item
            .content
              .ui.right.floated.button
                %i.fa.fa-edit
                = wiki.wiki_revisions.count

              %h4.header
                = link_to wiki do
                  = wiki.title
                  - if wiki.comments.count > 0
                    %small
                      (#{wiki.comments.count})
              .meta
                - if @project.nil? && wiki.project
                  .ui.basic.small.label
                    = wiki.project.title
                %span.nickname
                  %i.user.icon
                  = wiki.wiki_revisions.last.user.nickname

    - else
      - if @project.present?
        .alert.alert-info
          %i.inbox.icon
          첫 위키 페이지를 작성해 보세요.
          = link_to "#{Wiki.model_name.human} 추가하기", new_wiki_path(project_id: @project), class: 'alert-link'