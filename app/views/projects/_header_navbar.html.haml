.ui.inverted.segment
  .ui.container.grid
    .column
      .ui.fluid.six.item.menu.inverted
        - if project.events.any? && project.discussion_enabled
          = link_to '#anchor-project-envent', class: 'item' do
            = local_assigns[:title_label] || Event.model_name.human
        - if project.polls.any? && project.poll_enabled
          = link_to '#anchor-project-poll', class: 'item' do
            = local_assigns[:title_label] || project.try(:component_title, 'poll')
        - if project.surveys.any? && project.survey_enabled
          = link_to '#anchor-project-survey', class: 'item' do
            = local_assigns[:title_label] || project.try(:component_title, 'survey')
        - if project.petitions.any? && project.petition_enabled
          = link_to '#anchor-project-petition', class: 'item' do
            = local_assigns[:title_label] || project.try(:component_title, 'petition')
        - if project.wiki_enabled
          = link_to '#anchor-project-wiki', class: 'item' do
            위키
        - if project.discussions.any? && project.discussion_enabled
          = link_to '#anchor-project-discussion', class: 'item' do
            = local_assigns[:title_label] || project.try(:component_title, 'discussion')
