.ui.inverted.segment{ style: 'border-radius: 0' }
  .ui.container.grid
    .column
      .ui.fluid.six.item.menu.inverted
        - if project.events.any? && project.discussion_enabled
          = link_to '#anchor-project-envent', class: 'item' do
            = Event.model_name.human
        - if project.polls.any? && project.poll_enabled
          = link_to '#anchor-project-poll-and-survey', class: 'item' do
            = project.try(:component_title, 'poll_and_survey')
        - if project.petitions.any? && project.petition_enabled
          = link_to '#anchor-project-petition', class: 'item' do
            = project.try(:component_title, 'petition')
        - if project.wiki_enabled
          = link_to '#anchor-project-wiki', class: 'item' do
            위키
