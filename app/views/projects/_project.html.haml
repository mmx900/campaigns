.item[project]
  .image
    = image_tag project.image_url(:md)
  .content
    = link_to project.title, project, class: 'header'
    .meta
      %span
        = link_to project.user do
          #{project.user.nickname}님의 제안
      %span
        = date_f project.created_at
        부터
    .description
      = excerpt(project.body.html_safe)
    .extra
      = link_to '참여하기', project, class: 'ui floated button'

